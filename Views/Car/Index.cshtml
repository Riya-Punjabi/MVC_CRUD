@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Cars";
}

<div class= "jumbotron">
    <h1 class='text-center'>@ViewData["Title"]</h1>
</div>

<p>
   
</p>
 <table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
               Brand
            </th>
            <th>
               Model
            </th>
            <th>
                Price
            </th>
            <th>
                 <a asp-action="AddorEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for(int i=0;i<Model.Rows.Count;i++) {
        <tr>
            <td>
                @Model.Rows[i]["Brand"]
            </td>
            <td>
                @Model.Rows[i]["Model"]
            </td>
            <td>
                 @Model.Rows[i]["Price"]
            </td>
            <td>
                <a asp-action="AddorEdit" asp-route-id="@Model.Rows[i]["carID"]">Edit</a>  |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["carID"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
